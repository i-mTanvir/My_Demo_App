# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Application Configuration
VITE_APP_ENV=development
VITE_APP_NAME=Serrano Tex IMS
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_REALTIME=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true

# Security Configuration
VITE_SESSION_TIMEOUT=86400000
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=900000

# Email Configuration (for notifications)
VITE_EMAIL_SERVICE_URL=
VITE_EMAIL_API_KEY=

# SMS Configuration (for notifications)
VITE_SMS_SERVICE_URL=
VITE_SMS_API_KEY=

# Analytics Configuration
VITE_ANALYTICS_ID=
VITE_ANALYTICS_DOMAIN=

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3